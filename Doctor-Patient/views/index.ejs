<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MediCare Hub - Advanced Healthcare Platform</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            'inter': ['Inter', 'sans-serif'],
          },
          colors: {
            primary: {
              50: '#eff6ff',
              100: '#dbeafe',
              200: '#bfdbfe',
              300: '#93c5fd',
              400: '#60a5fa',
              500: '#3b82f6',
              600: '#2563eb',
              700: '#1d4ed8',
              800: '#1e40af',
              900: '#1e3a8a',
            },
            secondary: {
              50: '#f0f9ff',
              100: '#e0f2fe',
              200: '#bae6fd',
              300: '#7dd3fc',
              400: '#38bdf8',
              500: '#0ea5e9',
              600: '#0284c7',
              700: '#0369a1',
              800: '#075985',
              900: '#0c4a6e',
            }
          }
        }
      }
    }
  </script>
</head>

<body class="min-h-screen bg-gradient-to-br from-primary-50 via-white to-secondary-50 font-inter">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%233b82f6" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-40"></div>
    
    <!-- Navigation -->
    <nav class="relative z-10 px-6 py-4">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-xl flex items-center justify-center">
            <i class="fas fa-stethoscope text-white text-lg"></i>
          </div>
          <h1 class="text-2xl font-bold text-gray-800">MediCare Hub</h1>
        </div>
        <div class="hidden md:flex items-center space-x-6">
          <a href="#features" class="text-gray-600 hover:text-primary-600 transition-colors">Features</a>
          <a href="#about" class="text-gray-600 hover:text-primary-600 transition-colors">About</a>
          <a href="#contact" class="text-gray-600 hover:text-primary-600 transition-colors">Contact</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 py-12">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Side - Hero Text -->
        <div class="text-center lg:text-left">
          <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            Advanced
            <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">
              Healthcare
            </span>
            Platform
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Connect with top-rated doctors, manage appointments, and access your medical records all in one place. 
            Experience the future of healthcare with our AI-powered platform.
          </p>
          
          <!-- Stats -->
          <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary-600">500+</div>
              <div class="text-sm text-gray-600">Verified Doctors</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary-600">10K+</div>
              <div class="text-sm text-gray-600">Happy Patients</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary-600">24/7</div>
              <div class="text-sm text-gray-600">Support</div>
            </div>
          </div>
        </div>

        <!-- Right Side - Login/Register Forms -->
        <div class="bg-white/80 backdrop-blur-sm shadow-2xl rounded-3xl p-8 border border-white/20">
          <!-- Tabs -->
          <div class="flex justify-between items-center mb-8 bg-gray-50 p-2 rounded-2xl">
            <button id="adminBtn"
              class="tab-btn flex-1 py-3 text-sm font-semibold text-primary-700 bg-white rounded-xl shadow-sm transition-all duration-300 hover:shadow-md">
              <i class="fas fa-user-shield mr-2"></i>
              Admin
            </button>
            <button id="doctorBtn"
              class="tab-btn flex-1 py-3 text-sm font-medium text-gray-600 hover:bg-white hover:shadow-sm rounded-xl transition-all duration-300">
              <i class="fas fa-user-md mr-2"></i>
              Doctor
            </button>
            <button id="patientBtn"
              class="tab-btn flex-1 py-3 text-sm font-medium text-gray-600 hover:bg-white hover:shadow-sm rounded-xl transition-all duration-300">
              <i class="fas fa-user-injured mr-2"></i>
              Patient
            </button>
          </div>

          <!-- Forms -->
          <!-- Admin Login -->
          <form id="adminForm" class="space-y-6" action="/api/auth/login/admin" method="POST">
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800 mb-2">Admin Portal</h2>
              <p class="text-gray-600">Access administrative controls</p>
            </div>
            
            <div class="space-y-4">
              <div>
                <label for="adminEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-envelope mr-2 text-primary-500"></i>Email Address
                </label>
                <input type="email" id="adminEmail" placeholder="admin@medicare.com"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="email" required/>
              </div>
              
              <div>
                <label for="adminPassword" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-lock mr-2 text-primary-500"></i>Password
                </label>
                <div class="relative">
                  <input type="password" id="adminPassword" placeholder="Enter your password"
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white pr-12" 
                    name="password" required/>
                  <button type="button" data-toggle-password="adminPassword" 
                    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
            </div>
            
            <button type="submit"
              class="w-full bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <i class="fas fa-sign-in-alt mr-2"></i>
              Access Admin Portal
            </button>
          </form>

          <!-- Doctor Registration -->
          <form id="doctorForm" class="hidden space-y-6" action="/api/auth/register/doctor" method="POST" enctype="multipart/form-data">
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800 mb-2">Doctor Registration</h2>
              <p class="text-gray-600">Join our network of healthcare professionals</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="docName" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-user mr-2 text-primary-500"></i>Full Name
                </label>
                <input type="text" id="docName" placeholder="Dr. John Smith"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="name" required/>
              </div>
              
              <div>
                <label for="docEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-envelope mr-2 text-primary-500"></i>Email Address
                </label>
                <input type="email" id="docEmail" placeholder="doctor@example.com"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="email" required/>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="docPhone" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-phone mr-2 text-primary-500"></i>Phone Number
                </label>
                <input type="tel" id="docPhone" placeholder="+1 (555) 123-4567"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="phone" required/>
              </div>
              
              <div>
                <label for="docPassword" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-lock mr-2 text-primary-500"></i>Password
                </label>
                <div class="relative">
                  <input type="password" id="docPassword" placeholder="Create a strong password"
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white pr-12" 
                    name="password" required/>
                  <button type="button" data-toggle-password="docPassword" 
                    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="specialization" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-stethoscope mr-2 text-primary-500"></i>Specialization
                </label>
                <select id="specialization" name="specialization" required
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                  <option value="">Select Specialization</option>
                  <option value="Cardiology">Cardiology</option>
                  <option value="Dermatology">Dermatology</option>
                  <option value="Neurology">Neurology</option>
                  <option value="Orthopedics">Orthopedics</option>
                  <option value="Pediatrics">Pediatrics</option>
                  <option value="Psychiatry">Psychiatry</option>
                  <option value="General Medicine">General Medicine</option>
                  <option value="Gynecology">Gynecology</option>
                  <option value="Ophthalmology">Ophthalmology</option>
                  <option value="ENT">ENT</option>
                </select>
              </div>
              
              <div>
                <label for="experience" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-calendar-alt mr-2 text-primary-500"></i>Experience (Years)
                </label>
                <input type="number" id="experience" placeholder="5" min="0"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="experience" required/>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="qualification" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-graduation-cap mr-2 text-primary-500"></i>Qualification
                </label>
                <input type="text" id="qualification" placeholder="MD, MBBS"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="qualification" required/>
              </div>
              
              <div>
                <label for="consultationFee" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-dollar-sign mr-2 text-primary-500"></i>Consultation Fee
                </label>
                <input type="number" id="consultationFee" placeholder="100" min="0"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="consultationFee" required/>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-3">
                <i class="fas fa-venus-mars mr-2 text-primary-500"></i>Gender
              </label>
              <div class="flex gap-6">
                <label class="flex items-center text-gray-700 font-medium cursor-pointer">
                  <input type="radio" name="gender" class="mr-3 accent-primary-600" value="male" required/> 
                  <i class="fas fa-mars mr-2 text-blue-500"></i>Male
                </label>
                <label class="flex items-center text-gray-700 font-medium cursor-pointer">
                  <input type="radio" name="gender" class="mr-3 accent-primary-600" value="female" required/> 
                  <i class="fas fa-venus mr-2 text-pink-500"></i>Female
                </label>
                <label class="flex items-center text-gray-700 font-medium cursor-pointer">
                  <input type="radio" name="gender" class="mr-3 accent-primary-600" value="other" required/> 
                  <i class="fas fa-transgender mr-2 text-purple-500"></i>Other
                </label>
              </div>
            </div>
            
            <div>
              <label for="bio" class="block text-sm font-semibold text-gray-700 mb-2">
                <i class="fas fa-user-md mr-2 text-primary-500"></i>Bio (Optional)
              </label>
              <textarea id="bio" name="bio" rows="3" placeholder="Tell us about your medical background and expertise..."
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white resize-none"></textarea>
            </div>
            
            <div>
              <label for="idProof" class="block text-sm font-semibold text-gray-700 mb-2">
                <i class="fas fa-file-upload mr-2 text-primary-500"></i>Upload ID Proof
              </label>
              <div class="border-2 border-dashed border-gray-300 rounded-xl p-6 text-center hover:border-primary-400 transition-colors">
                <input type="file" id="idProof" name="idproof" accept="image/*,.pdf" required
                  class="hidden file-input"/>
                <label for="idProof" class="cursor-pointer">
                  <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-4"></i>
                  <p class="text-gray-600 mb-2">Click to upload your ID proof</p>
                  <p class="text-sm text-gray-500">PNG, JPG, PDF up to 5MB</p>
                </label>
              </div>
              <div id="fileInfo" class="hidden mt-2 text-sm text-green-600"></div>
            </div>
            
            <button type="submit"
              class="w-full bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <i class="fas fa-user-plus mr-2"></i>
              Register as Doctor
            </button>
            
            <p class="text-sm text-center text-gray-600">
              Already registered? 
              <a href="#" class="text-primary-600 hover:underline font-medium show-login">Login here</a>
            </p>
          </form>

          <!-- Patient Registration -->
          <form id="patientForm" class="hidden space-y-6" action="/api/auth/register/patient" method="POST">
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800 mb-2">Patient Registration</h2>
              <p class="text-gray-600">Join our healthcare community</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="patientName" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-user mr-2 text-primary-500"></i>Full Name
                </label>
                <input type="text" id="patientName" placeholder="John Doe"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="name" required/>
              </div>
              
              <div>
                <label for="patientEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-envelope mr-2 text-primary-500"></i>Email Address
                </label>
                <input type="email" id="patientEmail" placeholder="patient@example.com"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="email" required/>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="patientPassword" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-lock mr-2 text-primary-500"></i>Password
                </label>
                <div class="relative">
                  <input type="password" id="patientPassword" placeholder="Create a strong password"
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white pr-12" 
                    name="password" required/>
                  <button type="button" data-toggle-password="patientPassword" 
                    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
              
              <div>
                <label for="patientAge" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-calendar-alt mr-2 text-primary-500"></i>Age
                </label>
                <input type="number" id="patientAge" placeholder="25" min="0" max="120"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="age" required/>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="patientPhone" class="block text-sm font-semibold text-gray-700 mb-2">
                  <i class="fas fa-phone mr-2 text-primary-500"></i>Phone Number
                </label>
                <input type="tel" id="patientPhone" placeholder="+1 (555) 123-4567"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white" 
                  name="phone" required/>
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-3">
                  <i class="fas fa-venus-mars mr-2 text-primary-500"></i>Gender
                </label>
                <div class="flex gap-4">
                  <label class="flex items-center text-gray-700 font-medium cursor-pointer">
                    <input type="radio" name="gender" class="mr-2 accent-primary-600" value="male" required/> 
                    <i class="fas fa-mars mr-1 text-blue-500"></i>Male
                  </label>
                  <label class="flex items-center text-gray-700 font-medium cursor-pointer">
                    <input type="radio" name="gender" class="mr-2 accent-primary-600" value="female" required/> 
                    <i class="fas fa-venus mr-1 text-pink-500"></i>Female
                  </label>
                  <label class="flex items-center text-gray-700 font-medium cursor-pointer">
                    <input type="radio" name="gender" class="mr-2 accent-primary-600" value="other" required/> 
                    <i class="fas fa-transgender mr-1 text-purple-500"></i>Other
                  </label>
                </div>
              </div>
            </div>
            
            <button type="submit"
              class="w-full bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <i class="fas fa-user-plus mr-2"></i>
              Register as Patient
            </button>
            
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white text-gray-500">Or continue with</span>
              </div>
            </div>
            
            <button id="googleBtn" type="button"
              class="w-full bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-semibold py-3 px-4 rounded-xl transition-all duration-200 flex items-center justify-center shadow-sm hover:shadow-md">
              <i class="fab fa-google mr-3 text-red-500"></i>
              Continue with Google
            </button>
            
            <p class="text-sm text-center text-gray-600">
              Already have an account? 
              <a href="#" class="text-primary-600 hover:underline font-medium show-login">Login here</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose MediCare Hub?</h2>
        <p class="text-xl text-gray-600">Advanced features for modern healthcare</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 p-8 rounded-2xl border border-primary-200">
          <div class="w-16 h-16 bg-primary-600 rounded-2xl flex items-center justify-center mb-6">
            <i class="fas fa-video text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Video Consultations</h3>
          <p class="text-gray-600">Connect with doctors through secure video calls from the comfort of your home.</p>
        </div>
        
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 p-8 rounded-2xl border border-secondary-200">
          <div class="w-16 h-16 bg-secondary-600 rounded-2xl flex items-center justify-center mb-6">
            <i class="fas fa-calendar-check text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Smart Scheduling</h3>
          <p class="text-gray-600">AI-powered appointment scheduling that finds the best time slots for you.</p>
        </div>
        
        <div class="bg-gradient-to-br from-green-50 to-green-100 p-8 rounded-2xl border border-green-200">
          <div class="w-16 h-16 bg-green-600 rounded-2xl flex items-center justify-center mb-6">
            <i class="fas fa-file-medical text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Digital Prescriptions</h3>
          <p class="text-gray-600">Secure digital prescriptions that you can access anytime, anywhere.</p>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-8 rounded-2xl border border-purple-200">
          <div class="w-16 h-16 bg-purple-600 rounded-2xl flex items-center justify-center mb-6">
            <i class="fas fa-chart-line text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Health Analytics</h3>
