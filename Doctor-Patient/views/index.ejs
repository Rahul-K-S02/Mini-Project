<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Healthcare Portal</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-100 flex justify-center items-center p-6">
  <div class="bg-white shadow-2xl rounded-2xl w-full max-w-md p-8 transition-all duration-300">
    <!-- Tabs -->
    <div class="flex justify-between items-center mb-8 bg-blue-50 p-2 rounded-xl">
      <button id="adminBtn"
        class="tab-btn flex-1 py-2 text-sm sm:text-base font-semibold text-blue-700 bg-white rounded-lg shadow transition-all duration-200">
        Admin Login
      </button>
      <button id="doctorBtn"
        class="tab-btn flex-1 py-2 text-sm sm:text-base font-medium text-gray-600 hover:bg-white hover:shadow rounded-lg transition-all duration-200">
        Doctor Register
      </button>
      <button id="patientBtn"
        class="tab-btn flex-1 py-2 text-sm sm:text-base font-medium text-gray-600 hover:bg-white hover:shadow rounded-lg transition-all duration-200">
        Patient Register
      </button>
    </div>

    <!-- Forms -->
    <!-- Admin Login -->
    <form id="adminForm" class="space-y-4" action="/admin" method="POST">
      <h1 class="text-2xl font-semibold text-center text-blue-600 mb-4">Admin Login</h1>
      <div>
        <label for="adminEmail" class="block text-gray-700 font-medium mb-1">Email :</label>
        <input type="email" id="adminEmail" placeholder="Enter your email..."
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" name="email"/>
      </div>
      <div>
        <label for="adminPassword" class="block text-gray-700 font-medium mb-1">Password :</label>
        <input type="password" id="adminPassword" placeholder="Enter your password.."
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" name="password"/>
      </div>
      <button
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg py-2 transition duration-200">
        Login
      </button>
    </form>

    <!-- Doctor Register -->
    <form id="doctorForm" class="hidden space-y-4" action="/doctor" method="POST">
      <h1 class="text-2xl font-semibold text-center text-blue-600 mb-4">Doctor Register</h1>
      <div>
        <label for="docName" class="block text-gray-700 font-medium mb-1">Full Name :</label>
        <input type="text" id="docName" placeholder="Enter your full name"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" />
      </div>
      <div>
        <label for="docPhone" class="block text-gray-700 font-medium mb-1">Phone Number :</label>
        <input type="number" id="docPhone" placeholder="Enter your phone number"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" />
      </div>
      <fieldset class="flex gap-4">
        <label class="flex items-center text-gray-700 font-medium">
          <input type="radio" name="gender" class="mr-2 accent-blue-600" /> Male
        </label>
        <label class="flex items-center text-gray-700 font-medium">
          <input type="radio" name="gender" class="mr-2 accent-blue-600" /> Female
        </label>
      </fieldset>
      <div>
        <label for="idProof" class="block text-gray-700 font-medium mb-1">Upload your ID proof:</label>
        <input type="file" id="idProof"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" />
      </div>
      <p class="text-sm text-center text-gray-600 mt-4">
        Already Registered?
        <a href="#" class="text-blue-600 hover:underline font-medium">Login</a>
      </p>
      <button
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg py-2 transition duration-200">
        Register
      </button>
    </form>

    <!-- Patient Register -->
    <form id="patientForm" class="hidden space-y-4" action="/patientVerify" method="GET">
      <h1 class="text-2xl font-semibold text-center text-blue-600 mb-4">Patient Register</h1>
      <div>
        <label for="aadhar" class="block text-gray-700 font-medium mb-1">Aadhar Number :</label>
        <input type="number" id="aadhar" placeholder="Enter your aadhar number"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" />
      </div>
      <p class="text-center text-gray-500 font-medium">OR</p>
      <div>
        <label for="phone" class="block text-gray-700 font-medium mb-1">Phone Number :</label>
        <input type="number" id="phone" placeholder="Enter your phone number"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" />
      </div>
      <button
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg py-2 transition duration-200">
        Register
      </button>
    </form>
  </div>

  <!-- JavaScript for toggling -->
  <script>
    const adminBtn = document.getElementById('adminBtn');
    const doctorBtn = document.getElementById('doctorBtn');
    const patientBtn = document.getElementById('patientBtn');

    const adminForm = document.getElementById('adminForm');
    const doctorForm = document.getElementById('doctorForm');
    const patientForm = document.getElementById('patientForm');

    const buttons = [adminBtn, doctorBtn, patientBtn];
    const forms = [adminForm, doctorForm, patientForm];

    function showForm(index) {
      forms.forEach((form, i) => {
        form.classList.toggle('hidden', i !== index);
        buttons[i].classList.toggle('bg-white', i === index);
        buttons[i].classList.toggle('text-blue-700', i === index);
        buttons[i].classList.toggle('font-semibold', i === index);
        buttons[i].classList.toggle('shadow', i === index);
        buttons[i].classList.toggle('text-gray-600', i !== index);
        buttons[i].classList.toggle('font-medium', i !== index);
      });
    }

    adminBtn.addEventListener('click', () => showForm(0));
    doctorBtn.addEventListener('click', () => showForm(1));
    patientBtn.addEventListener('click', () => showForm(2));
  </script>
</body>
</html>
