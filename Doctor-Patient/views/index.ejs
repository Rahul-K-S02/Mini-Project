  <!-- JavaScript (all event listeners moved here — CSP-friendly) -->
  <script>
    // Wait till DOM ready
    document.addEventListener('DOMContentLoaded', () => {
      // Tab buttons & forms
      const adminBtn = document.getElementById('adminBtn');
      const doctorBtn = document.getElementById('doctorBtn');
      const patientBtn = document.getElementById('patientBtn');

      const adminForm = document.getElementById('adminForm');
      const doctorForm = document.getElementById('doctorForm');
      const patientForm = document.getElementById('patientForm');

      const buttons = [adminBtn, doctorBtn, patientBtn];
      const forms = [adminForm, doctorForm, patientForm];

      function showForm(index) {
        forms.forEach((form, i) => {
          form.classList.toggle('hidden', i !== index);

          // Update button styles
          if (i === index) {
            buttons[i].classList.add('bg-white', 'text-primary-700', 'font-semibold', 'shadow-sm');
            buttons[i].classList.remove('text-gray-600', 'font-medium');
          } else {
            buttons[i].classList.remove('bg-white', 'text-primary-700', 'font-semibold', 'shadow-sm');
            buttons[i].classList.add('text-gray-600', 'font-medium');
          }
        });
      }

      // Attach tab listeners
      adminBtn.addEventListener('click', () => showForm(0));
      doctorBtn.addEventListener('click', () => showForm(1));
      patientBtn.addEventListener('click', () => showForm(2));

      // Password toggle functionality (data-toggle-password attribute)
      document.querySelectorAll('[data-toggle-password]').forEach(btn => {
        btn.addEventListener('click', (e) => {
          // If the click target is an <i> inside the button, ensure we still get the button element
          const targetBtn = e.currentTarget;
          const inputId = targetBtn.getAttribute('data-toggle-password');
          const input = document.getElementById(inputId);
          if (!input) return;
          const icon = targetBtn.querySelector('i');

          if (input.type === 'password') {
            input.type = 'text';
            if (icon) {
              icon.classList.remove('fa-eye');
              icon.classList.add('fa-eye-slash');
            }
          } else {
            input.type = 'password';
            if (icon) {
              icon.classList.remove('fa-eye-slash');
              icon.classList.add('fa-eye');
            }
          }
        });
      });

      // File input handling (file-input class)
      document.querySelectorAll('.file-input').forEach(input => {
        input.addEventListener('change', (e) => {
          const fileInfo = document.getElementById('fileInfo');
          const file = e.target.files && e.target.files[0];
          if (file) {
            const fileSizeMb = (file.size / 1024 / 1024).toFixed(2);
            fileInfo.innerHTML = `<i class="fas fa-check mr-2"></i>Selected: ${file.name} (${fileSizeMb} MB)`;
            fileInfo.classList.remove('hidden');
          } else {
            fileInfo.classList.add('hidden');
            fileInfo.innerHTML = '';
          }
        });
      });

      // Google auth button
      const googleBtn = document.getElementById('googleBtn');
      if (googleBtn) {
        googleBtn.addEventListener('click', () => {
          // redirect to your server route
          window.location.href = "http://localhost:5000/api/auth/google";
          console.log("Google Auth triggered");
        });
      }

      // Smooth scrolling for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          // If anchor also has class 'show-login', we handle that separately
          if (this.classList.contains('show-login')) return;
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // showLoginForm links (class "show-login") -> show admin login (index 0)
      document.querySelectorAll('.show-login').forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          showForm(0); // shows Admin form — keep consistent with your previous use of showLoginForm()
          // optionally scroll to form
          adminForm.scrollIntoView({ behavior: 'smooth', block: 'center' });
        });
      });

      // Form validation & submit handling
      document.querySelectorAll('form').forEach(form => {
        form.addEventListener('submit', function(e) {
          // Note: we prevent default to run client-side validation first,
          // then call form.submit() to let the server handle it if validation passes.
          e.preventDefault();

          const requiredFields = form.querySelectorAll('[required]');
          let isValid = true;

          requiredFields.forEach(field => {
            // for file inputs and radios, validation differs slightly
            if ((field.type === 'file' && field.files.length === 0) ||
                (field.type === 'radio' && !form.querySelector(`input[name="${field.name}"]:checked`))) {
              isValid = false;
              field.classList.add('border-red-500');
              field.classList.remove('border-gray-200');
            } else if (field.type !== 'file' && field.type !== 'radio') {
              if (!field.value || !String(field.value).trim()) {
                isValid = false;
                field.classList.add('border-red-500');
                field.classList.remove('border-gray-200');
              } else {
                field.classList.remove('border-red-500');
                field.classList.add('border-gray-200');
              }
            } else {
              // checked or file present - mark ok
              field.classList.remove('border-red-500');
              field.classList.add('border-gray-200');
            }
          });

          if (isValid) {
            const submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
              submitBtn.dataset.origHtml = submitBtn.innerHTML;
              submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';
              submitBtn.disabled = true;
            }

            // submit the form to the server
            form.submit();
          } else {
            // optionally, focus first invalid field
            const firstInvalid = form.querySelector('.border-red-500, :invalid');
            if (firstInvalid) firstInvalid.focus();
          }
        });
      });

      // Add loading animation to buttons that are submit-type handled by click
      document.querySelectorAll('button').forEach(button => {
        button.addEventListener('click', function() {
          if (this.type === 'submit') {
            this.classList.add('animate-pulse');
          }
        });
      });

      // Initialize default tab (Admin)
      showForm(0);
    });
  </script>
