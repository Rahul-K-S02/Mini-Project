    <!-- JavaScript -->
    <script>
        // Initialize Charts
        document.addEventListener('DOMContentLoaded', function() {
            // Revenue Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Revenue ($)',
                        data: [12000, 15000, 18000, 14000, 22000, 19000, 25000],
                        borderColor: 'rgb(59, 130, 246)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.1)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // Appointments Chart
            const appointmentsCtx = document.getElementById('appointmentsChart').getContext('2d');
            new Chart(appointmentsCtx, {
                type: 'bar',
                data: {
                    labels: ['Cardiology', 'Dermatology', 'Neurology', 'Orthopedics', 'Pediatrics'],
                    datasets: [{
                        label: 'Appointments',
                        data: [45, 32, 28, 38, 42],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(139, 92, 246, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(239, 68, 68, 0.8)'
                        ],
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.1)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });

        // Admin Functions
        function approveDoctor(doctorId) {
            if (confirm('Are you sure you want to approve this doctor?')) {
                // API call to approve doctor
                console.log('Approving doctor:', doctorId);
                // Show success message
                showNotification('Doctor approved successfully!', 'success');
            }
        }

        function rejectDoctor(doctorId) {
            if (confirm('Are you sure you want to reject this doctor?')) {
                // API call to reject doctor
                console.log('Rejecting doctor:', doctorId);
                // Show success message
                showNotification('Doctor rejected successfully!', 'success');
            }
        }

        function suspendDoctor(doctorId) {
            if (confirm('Are you sure you want to suspend this doctor?')) {
                // API call to suspend doctor
                console.log('Suspending doctor:', doctorId);
                // Show success message
                showNotification('Doctor suspended successfully!', 'success');
            }
        }

        function viewDoctorDetails(doctorId) {
            // Open doctor details modal or navigate to details page
            console.log('Viewing doctor details:', doctorId);
        }

        function showDoctorApproval() {
            // Show doctor approval section
            console.log('Showing doctor approval section');
        }

        function showPatientManagement() {
            // Show patient management section
            console.log('Showing patient management section');
        }

        function showSystemSettings() {
            // Show system settings section
            console.log('Showing system settings section');
        }

        function showReports() {
            // Show reports section
            console.log('Showing reports section');
        }

        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                // Clear session and redirect
                window.location.href = '/';
            }
        }

        function showNotification(message, type = 'info') {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 ${
                type === 'success' ? 'bg-green-500 text-white' : 
                type === 'error' ? 'bg-red-500 text-white' : 
                'bg-blue-500 text-white'
            }`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'times' : 'info'} mr-2"></i>
                    ${message}
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Remove notification after 3 seconds
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Real-time updates simulation
        setInterval(() => {
            // Simulate real-time data updates
            const stats = document.querySelectorAll('.text-3xl.font-bold');
            stats.forEach(stat => {
                const currentValue = parseInt(stat.textContent.replace(/[^\d]/g, ''));
                const newValue = currentValue + Math.floor(Math.random() * 3);
                stat.textContent = stat.textContent.replace(/\d+/, newValue);
            });
        }, 30000); // Update every 30 seconds
    </script>
</body>
